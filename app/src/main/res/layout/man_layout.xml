<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/man"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="TODO"
        android:elevation="1dp"
        android:src="@drawable/man"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/manSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="65dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/manBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/manSpeaking0"
            style="@style/SimpleOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Man Speaking0" />

        <TextView
            android:id="@+id/manSpeaking1"
            style="@style/SimpleOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Man Speaking1" />

        <TextView
            android:id="@+id/manSpeaking2"
            style="@style/SimpleOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Man Speaking2" />

        <TextView
            android:id="@+id/manSpeaking3"
            style="@style/SimpleOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:typeface="normal"
            tools:text="Man Speaking3" />

        <TextView
            android:id="@+id/manSpeaking4"
            style="@style/SimpleOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:typeface="normal"
            tools:text="Man Speaking4" />

        <TextView
            android:id="@+id/manSpeaking5"
            style="@style/SimpleOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:typeface="normal"
            tools:text="Man Speaking5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>